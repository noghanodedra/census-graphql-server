{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@auth/*": ["auth/*"],
      "@entities/*": ["entities/*"],
      "@inputs/*": ["inputs/*"],
      "@resolvers/*": ["resolvers/*"]
    },
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": false
  },
  "exclude": ["node_modules"]
}
